
{{#each erros}}

<div class="alert alert-danger">{{texto}}</div>

{{/each}}

<h3>Crie sua conta hoje:</h3>
<div class="card">
    <div class="card-body">
        <form action="" method="post">
        <label for="nome">Nome:</label>
            <input type="text" name="nome" class="form-control" id="" required>
        <label for="email">Email:</label>
            <input type="email" unique: true  name="email" class="form-control" required>
        <label for="senha">Senha:</label>
            <input type="password" name="senha" required id="" class="form-control">
        <label for="senhaAgain">Repita sua senha:</label>
            <input type="password" name="senhaAgain" required id="" class="form-control">
        <button type="submit" class="btn btn-success mt-3">Cadastre-se</button>
       </form>
    </div>
</div>