<h2>Lista de categoria: </h2>
<hr>

<a href="/admin/categorias/add">
    <button class="btn btn-success">Nova categoria</button>
</a>

{{!-- quando clica em 'nova categoria' direciona o usuario para o endere√ßo
do href --}}


{{#each categorias}}

<div class="card mt-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>Slug:{{slug}}</small><br>
        <small>Criado em: {{date}}</small><br>
        <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-3 btn-sm">Editar categoria</button></a>
        <form action="/admin/categorias/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
        </form>
    </div>
</div>

{{else}}
<h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}