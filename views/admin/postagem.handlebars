<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add">
    <button class="btn btn-success">Nova postagem</button>
</a>

{{#each postagens}}

<div class="card">
    <div class="card-body">
         
        <h4>{{titulo}}</h4>
        <h6>descricao: {{descricao}}</h6>
        <h6>Criado em:{{data}}</h6>
        <h6>conteudo: {{conteudo}}</h6>
        <h6>slug:{{slug}}</h6>
        <p>Categoria:{{categoria.nome}}</p>

        {{!-- THIS IS A BAD WAY TO DO IT --}}
        <a href="/admin/postagens/edit/{{_id}}">
            <button type="submit" class="btn btn-success btn-sm">Editar postagem</button>
        </a>
       
        <form action="/admin/postagens/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button  type="submit" class="btn btn-danger btn-sm mt-2">Deletar postagem</button>
        </form>

    </div>
</div>

{{else}}
<h4 class="mt-3">Nenhuma postagem registrada</h4>
{{/each}}