
{{#each error}}
 
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}


<div class="card">
    <div class="card-body mt-4">
        <h4>Nova postagem</h4>
        <form action="/admin/postagens/add" method="POST">
       <label for="titulo">Título: </label>
            <input  type="text" id="Título " name="titulo" placeholder="Título da postagem" class="form-control">
        <label for="slug">Slug: </label>
            <input  type="text" id="slug" name="slug" placeholder="Slug da postagem" class="form-control"> 
        <label for="descricao">descricao: </label>
            <input  type="text" id="descricao" name="descricao" placeholder="Descrição da postagem" class="form-control">
        <label for="conteudo">conteudo: </label>
            <textarea name="conteudo"class="form-control" placeholder="Conteudo"></textarea><br>
        <label for="categoria">Categoria:</label>
        <select name="categoria" class="custom-select">
            {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
            {{else}}
                <option value="0">Nenhuma categoria registrada</option>
            {{/each}}
        </select>      
        <button type="submit" class="btn btn-success mt-3"  >Criar postagem</button>  
        </form>
    </div>
</div>